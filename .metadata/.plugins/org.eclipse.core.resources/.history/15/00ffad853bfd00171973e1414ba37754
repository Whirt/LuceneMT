package GUI;

import javax.swing.JFrame;

/* Il programma si appoggia alla libreria grafica di java.awt e javax.swing
 * per fornire all'utente le diverse tipologie di interazione
 */

public class Window extends JFrame {
	private static final long serialVersionUID = -2815577872584840591L;
	
	private static final int FRAME_HEIGHT = 670;
	private static final int FRAME_WIDTH = 700;
	
	private static final String title = "Lucene Model and Tolerant Retrieval";
	
	public Window() {
		super("LuceneMT" + title);
		setSize(FRAME_WIDTH,FRAME_HEIGHT);
		Panel pn = new Panel();
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setContentPane(pn);
		setVisible(true);
	}
}
